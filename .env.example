AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Firebase Realtime Database (replaces MySQL for app data)
# Your database URL from Firebase Console > Realtime Database
FIREBASE_DATABASE_URL=https://icecream-14ae7-default-rtdb.firebaseio.com
# Path to Service Account JSON (Project Settings > Service accounts > Generate new private key)
# Relative to project root, or absolute path
FIREBASE_CREDENTIALS=storage/app/firebase/icecream-14ae7-firebase-adminsdk-fbsvc-430ee15fce.json

# Google OAuth (Sign in with Google on login/register)
# Get credentials from https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application). APP_URL below must match the URL you use in the browser. In Google Console, add these Authorized redirect URIs (use your actual APP_URL):
#   {APP_URL}/customer/auth/google/callback
#   {APP_URL}/admin/auth/google/callback
# For local dev with Google sign-in use APP_URL=http://127.0.0.1:8000 (Google does not allow private IPs like 10.x or 192.168.x).
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
